<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_add"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#bbbbbb" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_count_name"
            style="@style/EnrollTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="杂项" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <!--<Spinner-->
            <!--android:id="@+id/spinner_count"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_marginRight="15dp" />-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_reduce"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/icon_button_reduce"
                android:layout_marginRight="15dp"/>
            <TextView
                android:id="@+id/tv_antique_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginRight="15dp"
                android:text="0"/>
            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/icon_button_add"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
