<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/layout_title"
        layout="@layout/layout_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:background="@color/gray3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_edit_text">

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/phone_number_head"
            android:textColor="@color/gray5"
            android:textSize="@dimen/ts_normal_one" />

        <View
            android:layout_width="0.75dp"
            android:layout_height="fill_parent"
            android:background="@color/gray3" />

        <EditText
            android:id="@+id/et_userphone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@null"
            android:gravity="center"
            android:hint="@string/hint_input_phone_number"
            android:paddingBottom="12dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="12dp"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:textSize="@dimen/ts_normal_one" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/bg_edit_text">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.2"
                android:gravity="center"
                android:text="@string/auth_code_head"
                android:textColor="@color/gray5"
                android:textSize="@dimen/ts_normal_one" />

            <View
                android:layout_width="0.75dp"
                android:layout_height="fill_parent"
                android:background="@color/gray3" />

            <EditText
                android:id="@+id/et_authcode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@null"
                android:gravity="center"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:textSize="@dimen/ts_normal_one" />
        </LinearLayout>

        <TextView
            android:id="@+id/get_auth_code"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_balance_recharge"
            android:gravity="center"
            android:text="@string/get_auth_code"
            android:textColor="@color/white"
            android:textSize="14dp" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_submit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_button_submit_orange"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textSize="@dimen/ts_normal_one" />

</LinearLayout>