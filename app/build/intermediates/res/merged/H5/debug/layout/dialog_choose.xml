<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:gravity="center"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_title_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="15dp"
            android:layout_toEndOf="@id/iv_title_icon"
            android:layout_toRightOf="@id/iv_title_icon"
            android:textColor="@color/gray5"
            android:textSize="@dimen/ts_normal_big"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.75dp"
            android:layout_below="@+id/tv_title"
            android:background="#cccccc"/>
    </RelativeLayout>

    <View
        android:id="@+id/v_divider_0"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/iv_money_paper"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/icon_money_paper"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:text="纸币"
            android:textColor="@color/gray5"
            android:textSize="@dimen/ts_normal_big"/>

        <TextView
            android:id="@+id/iv_money_silver"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/icon_money_silver"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:text="银元"
            android:textColor="@color/gray5"
            android:textSize="@dimen/ts_normal_big"/>

        <TextView
            android:id="@+id/iv_money_bronze"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/icon_money_bronze"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:text="铜币"
            android:textColor="@color/gray5"
            android:textSize="@dimen/ts_normal_big"/>

    </LinearLayout>

</LinearLayout>