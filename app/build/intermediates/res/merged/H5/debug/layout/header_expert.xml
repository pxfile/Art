<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.bobaoo.xiaobao.ui.widget.fix.FixedGridView
        android:id="@+id/fgv_organization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:listSelector="@color/transparent"
        android:numColumns="4"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:verticalSpacing="15dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_expert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/icon_line_vertical"
            android:drawablePadding="5dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="专家"
            android:textColor="@color/gray5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tb_switch"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="只显示线上专家"
            android:layout_marginRight="15dp"
            android:textColor="@color/gray4"/>

        <com.zcw.togglebutton.ToggleButton
            android:id="@+id/tb_switch"
            xmlns:toggle="http://schemas.android.com/apk/res-auto"
            android:layout_width="44dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            toggle:onColor="#e8a825"/>

        <View
            android:layout_below="@+id/tv_expert"
            android:layout_width="match_parent"
            android:layout_height="0.75dp"
            android:background="@color/gray9"/>
    </RelativeLayout>

</LinearLayout>