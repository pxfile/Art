<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/layout_title"
        layout="@layout/layout_title" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:background="@color/gray3" />
    <EditText
        android:id="@+id/et_old_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_edit_text"
        android:hint="@string/enter_original_password"
        android:textColor="@color/gray12"
        android:textSize="@dimen/ts_normal_one"
        android:paddingBottom="10dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="10dp" />

    <EditText
        android:id="@+id/et_new_password1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_edit_text"
        android:hint="@string/enter_new_password"
        android:textColor="@color/gray12"
        android:textSize="@dimen/ts_normal_one"
        android:paddingBottom="10dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="10dp" />

    <EditText
        android:id="@+id/et_new_password2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_edit_text"
        android:hint="@string/enter_new_password_again"
        android:textColor="@color/gray12"
        android:textSize="@dimen/ts_normal_one"
        android:paddingBottom="10dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/btn_edit_paswd_commit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nickname_prompt"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="38dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/bg_button_submit"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="@string/submit"
            android:textColor="@color/white"
            android:textSize="@dimen/ts_normal_one" />
    </RelativeLayout>
</LinearLayout>