<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90FFFFFF"
    android:gravity="bottom|center_horizontal" >

    <TextView
        android:id="@+id/tv_china_identify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dip"
        android:clickable="true"
        android:drawablePadding="9dp"
        android:drawableTop="@drawable/icon_china_identify"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/more_window_item_margin"
        android:text="@string/china2" />

    <TextView
        android:id="@+id/tv_jade_identify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dip"
        android:drawablePadding="9dp"
        android:layout_toRightOf="@+id/tv_china_identify"
        android:clickable="true"
        android:drawableTop="@drawable/icon_jade_identify"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/more_window_item_margin"
        android:text="玉器"/>

    <TextView
        android:id="@+id/tv_bronze_identify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_jade_identify"
        android:clickable="true"
        android:drawablePadding="9dp"
        android:drawableTop="@drawable/icon_bronze_identify"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/more_window_item_margin"
        android:text="铜器"/>

    <TextView
        android:id="@+id/tv_sundry_identify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_china_identify"
        android:layout_marginRight="50dip"
        android:clickable="true"
        android:drawablePadding="9dp"
        android:drawableTop="@drawable/icon_sundry_identify"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/more_window_item_margin"
        android:text="杂项"/>

    <TextView
        android:id="@+id/tv_woodenware_identify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_jade_identify"
        android:layout_marginRight="50dip"
        android:drawablePadding="9dp"
        android:layout_toRightOf="@+id/tv_sundry_identify"
        android:clickable="true"
        android:drawableTop="@drawable/icon_woodenware_identify"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/more_window_item_margin"
        android:text="木器"/>

    <TextView
        android:id="@+id/tv_painting_identify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_bronze_identify"
        android:layout_toRightOf="@+id/tv_woodenware_identify"
        android:clickable="true"
        android:drawablePadding="9dp"
        android:drawableTop="@drawable/icon_painting_identify"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/more_window_item_margin"
        android:text="书画"/>

    <TextView
        android:id="@+id/tv_money_identify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_woodenware_identify"
        android:layout_toRightOf="@+id/tv_sundry_identify"
        android:drawablePadding="9dp"
        android:clickable="true"
        android:drawableTop="@drawable/icon_money_identify"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/more_window_item_margin"
        android:text="钱币"/>

    <ImageView
        android:id="@+id/tv_paper_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_money_identify"
        android:layout_toRightOf="@+id/tv_sundry_identify"
        android:src="@drawable/icon_paper_money"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="50dip"/>

    <ImageView
        android:id="@+id/tv_copper_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_money_identify"
        android:layout_toLeftOf="@+id/tv_money_identify"
        android:src="@drawable/icon_copper_money"
        android:layout_marginTop="-45dp"
        android:layout_marginRight="30dip"/>

    <ImageView
        android:id="@+id/tv_silver_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_money_identify"
        android:layout_toRightOf="@+id/tv_money_identify"
        android:layout_marginLeft="30dp"
        android:src="@drawable/icon_copper_money"
        android:layout_marginTop="-45dp"/>

    <ImageView
        android:id="@+id/center_music_window_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_paper_money"
        android:layout_toRightOf="@+id/tv_sundry_identify"
        android:layout_marginLeft="22dp"
        android:layout_marginBottom="20dip"
        android:layout_marginTop="50dp"
        android:src="@drawable/icon_back_identify" />

</RelativeLayout>