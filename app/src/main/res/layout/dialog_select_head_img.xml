<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:background="@color/black"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/set_head_image"
            android:textColor="@color/white"
            android:textSize="@dimen/ts_normal_one" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_select_camera"
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_camera"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/take_photo"
            android:textColor="@color/gray5"
            android:textSize="@dimen/ts_normal_one" />
    </LinearLayout>

    <View
        android:id="@+id/v_divider_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide"
        android:background="@color/gray2" />

    <LinearLayout
        android:id="@+id/ll_select_photo"
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_photo"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/choice_from_camera"
            android:textColor="@color/gray5"
            android:textSize="@dimen/ts_normal_one" />

    </LinearLayout>

</LinearLayout>