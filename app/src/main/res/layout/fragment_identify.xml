<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange1">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/icon"/>

    <ImageView
        android:id="@+id/iv_take_picture_bronze"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="170dp"
        android:src="@drawable/icon_bronze"/>

    <ImageView
        android:id="@+id/iv_take_picture_china"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_take_picture_bronze"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="-45dp"
        android:layout_toRightOf="@+id/iv_take_picture_bronze"
        android:src="@drawable/icon_china"/>

    <ImageView
        android:id="@+id/iv_take_picture_wooden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_take_picture_bronze"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/iv_take_picture_china"
        android:src="@drawable/icon_wooden"/>

    <ImageView
        android:id="@+id/iv_take_picture_jade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_take_picture_bronze"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="95dp"
        android:src="@drawable/icon_jade"/>

    <ImageView
        android:id="@+id/iv_take_picture_sundry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_take_picture_bronze"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="90dp"
        android:layout_toRightOf="@+id/iv_take_picture_jade"
        android:src="@drawable/icon_sundry"/>

    <ImageView
        android:id="@+id/iv_take_picture_painting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_take_picture_bronze"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="210dp"
        android:src="@drawable/icon_painting"/>

    <ImageView
        android:id="@+id/iv_take_picture_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_take_picture_bronze"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="190dp"
        android:layout_toRightOf="@+id/iv_take_picture_painting"
        android:src="@drawable/icon_money"/>
    
    <ImageView
        android:id="@+id/img_inner_guider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/inner_guider"
        android:background="@color/transparent_black_40"
        android:scaleType="fitXY"/>
</RelativeLayout>
